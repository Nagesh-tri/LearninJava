public class Main
{
	public static void main(String[] args) {
	int n=4;
	//for outer loop
	for (int i=1;i<=n;i++){
	    //inner loop -->for spaces
	    for(int j=1;j<=n-i;j++){
	        System.out.print(" ");
	    }
	    //inner loop --> for Stars
	    for(int j=1;j<=i;j++){
	        //as local variables are scoped only inside loop thats why we need to redefine j again here.
	        System.out.print("*");
	    }
	}
	System.out.println();
	}
}
